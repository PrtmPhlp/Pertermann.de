        "react-dom": "^17.0.2",
        "react-rough-notation": "^1.0.1",
        "react-use-keypress": "^1.3.0",
        "reading-time": "^1.3.0",
        "remark-autolink-headings": "^7.0.0",
        "remark-code-titles": "^0.1.2",
        "remark-footnotes": "^4.0.0",
        "remark-frontmatter": "^4.0.0",
        "remark-mdx": "^1.6.22",
